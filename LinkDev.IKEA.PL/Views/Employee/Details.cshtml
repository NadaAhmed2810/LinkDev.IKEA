@model EmployeeDetailsViewModel
@{
	ViewData["Title"] = "Employee Details";
}
<div class="container">

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4>@Model.FullName</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Personal Information</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Age</dt>
                        <dd class="col-sm-8">@Model.Age</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">@Model.IsActive</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Model.IsActive</span>
                            }
                        </dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <h5>Employment Information</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Department</dt>
                        <dd class="col-sm-8">@Model.DepartmentName (@Model.DepartmentCode)</dd>

                        <dt class="col-sm-4">Salary</dt>
                        <dd class="col-sm-8">@Model.Salary.ToString("C")</dd>

                        <dt class="col-sm-4">Hire Date</dt>
                        <dd class="col-sm-8">@Model.FormattedHireDate</dd>

                        <dt class="col-sm-4">Years of Service</dt>
                        <dd class="col-sm-8">@Model.YearsOfService</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-info text-white">
            <h4>Department Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Department Name</dt>
                <dd class="col-sm-9">@Model.DepartmentName</dd>

                <dt class="col-sm-3">Department Code</dt>
                <dd class="col-sm-9">@Model.DepartmentCode</dd>

                <dt> class="col-sm-3">Department Description</dt>
                <dd class="col-sm-9">@Model.DepartmentDescription</dd>

                <dt class="col-sm-3">Manager</dt>
                <dd class="col-sm-9">@Model.ManagerofDepartmentName</dd>
            </dl>
        </div>
    </div>
</div>
