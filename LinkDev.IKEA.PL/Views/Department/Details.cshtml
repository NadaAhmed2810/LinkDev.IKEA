@model DepartmentDetailsView
@{
    ViewData["Title"] = "DepartmentDetails";
}

<h1>Department Details </h1>
<br />
<br />
<ul class="nav nay-tabs" id="departmentstabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">Administration</a>
    </li>
</ul>
<div class="tab-content" id="MyTabContent" >
    <div class="tab-pane fade show active p-4 border " id="general" role="tabpanel" aria-labelledby="general">
        <div class="row">
            <div class="from-group col-6 mb-4">
                <label class="from-label " asp-for="Code"></label>
                <input asp-for="Code" class="form-control " readonly/>

            </div>
            <div class="from-group col-6 mb-4">
                <label class="from-label " asp-for="Name"></label>
                <input asp-for="Name" class="form-control " readonly />

            </div>
            <div class="from-group col-6 mb-4">
                <label class="from-label " asp-for="Description"></label>
                <input asp-for="Description" class="form-control " readonly />

            </div>
            <label class="from-label " asp-for="CreationDate"></label>
            <input asp-for="CreationDate" class="form-control" type="date" readonly />

        </div>
        </div>
    <div class="tab-pane fade show active p-4 border " id="administration" role="tabpanel" aria-labelledby="administration">
       <div class="row">
        <div class="from-group col-6 mb-4">
            <label class="from-label " asp-for="CreatedBy"></label>
            <input asp-for="CreatedBy" class="form-control " readonly />

        </div>
        <div class="from-group col-6 mb-4">
            <label class="from-label " asp-for="CreatedOn"></label>
            <input asp-for="CreatedOn" class="form-control " readonly />

        </div>
        <div class="from-group col-6 mb-4">
            <label class="from-label " asp-for="LastModifiedBy"></label>
            <input asp-for="LastModifiedBy" class="form-control " readonly />

        </div>
        <div>
            <label class="from-label " asp-for="LastModifiedOn"></label>
            <input asp-for="LastModifiedOn" class="form-control" type="date" readonly />
        </div>
        

    </div>
</div>
</div>
